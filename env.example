# ======================================
# Gwan Docs - Configuração de Ambiente
# ======================================

# Ambiente da aplicação
NODE_ENV=development
APP_NAME=Gwan Docs
APP_VERSION=1.0.0
PORT=3000

# ======================================
# SERVIDOR BACKEND
# ======================================
SERVER_HOST=localhost
SERVER_PORT=3001
API_URL=http://localhost:3001

# ======================================
# BANCO DE DADOS
# ======================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=gwandoos
POSTGRES_USER=gwandoos
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_URL=postgresql://gwandoos:your_connect_password_here@localhost:5432/gwandoos

# Configurações de pool de conexão
DB_POOL_MIN=2
DB_POOL_MAX=10

# ======================================
# CACHE REDIS
# ======================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:your_redis_password_here@localhost:6379
REDIS_DB=0

# Configurações de sessão
SESSION_SECRET=your_session_secret_here
REDIS_EXPIRE_TIME=3600

# ======================================
# ELASTICSEARCH
# ======================================
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX=gwandoos

# ======================================
# AUTENTICAÇÃO
# ======================================
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_secret_here
JWT_REFRESH_EXPIRES_IN=30d

# NextAuth.js (se usando)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here_change_in_production

# ======================================
# OAUTH PROVIDERS (Opcional)
# ======================================
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

 # GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Microsoft OAuth
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret

# ======================================
# EMAIL CONFIGURATION
# ======================================
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@gwandoos.com
SENDGRID_FROM_NAME=Gwan Docs

# SMTP Configuration (alternativa)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# ======================================
# ARQUIVOS E UPLOADS
# ======================================
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt,md
S3_BUCKET_NAME=
S3_REGION=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# ======================================
# CORS CONFIGURATION
# ======================================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# ======================================
# RATE LIMITING
# ======================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ======================================
# LOGGING
# ======================================
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE=logs/app.log

# ======================================
# MONITORAMENTO (Opcional)
# ======================================
# Prometheus
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_ENABLED=false
GRAFANA_PORT=3001

# ======================================
# SEARCH CONFIGURATION
# ======================================
SEARCH_ENABLED=true
SEARCH_HIGHLIGHT_ENABLED=true
SEARCH_RESULTS_LIMIT=50

# ======================================
# COLLABORATION FEATURES
# ======================================
REALTIME_COLLABORATION=true
COLLABORATION_TIMEOUT=300000

# ======================================
# TERMOS E PRIVACIDADE
# ======================================
TERMS_URL=https://gwandoos.com/terms
PRIVACY_URL=https://gwandoos.com/privacy
SUPPORT_EMAIL=support@gwandoos.com

# ======================================
# DESENVOLVIMENTO
# ======================================
DEBUG=true
VERBOSE_LOGGING=false
HOT_RELOAD=true

# ======================================
# PRODUÇÃO (Quando NODE_ENV=production)
# ======================================
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=
DOMAIN=localhost

# Backup automático
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ======================================
# INTEGRAÇÕES EXTERNAS (Opcional)
# ======================================
# Slack Integration
SLACK_WEBHOOK_URL=
SLACK_BOT_TOKEN=

# Discord Integration
DISCORD_WEBHOOK_URL=
DISCORD_BOT_TOKEN=

# Google Analytics
GA_TRACKING_ID=

# Sentry Error Tracking
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ======================================
# OUTRAS CONFIGURAÇÕES
# ======================================
DEFAULT_LANGUAGE=pt-BR
SUPPORTED_LANGUAGES=pt-BR,en-US,es-ES,fr-FR
TIMEZONE=America/Sao_Paulo
DATE_FORMAT=DD/MM/YYYY
TIME_FORMAT=HH:mm:ss
